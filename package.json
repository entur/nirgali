{
  "name": "deviation-messages",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@entur/auth-provider": "1.0.0",
    "@entur/button": "2.8.0",
    "@entur/component-library": "0.30.0",
    "@entur/datepicker": "0.11.3",
    "@entur/form": "2.5.5",
    "@entur/icons": "0.11.0",
    "@entur/layout": "1.3.0",
    "@entur/tokens": "3.4.1",
    "@entur/typography": "1.6.11",
    "apollo-fetch": "0.7.0",
    "bootstrap": "4.6.2",
    "date-fns": "2.29.3",
    "firebase": "9.14.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "5.3.4",
    "react-select": "3.2.0",
    "react-super-responsive-table": "5.2.1",
    "react-windowed-select": "2.0.5"
  },
  "scripts": {
    "copy:config": "cp config/config-dev.json public/config.json",
    "prestart": "run-p --race copy:config",
    "start": "run-p --race start:firebase start:react",
    "start:firebase": "firebase serve -p 4000",
    "start:react": "PORT=3001 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "test:functions": "jest functions",
    "format": "prettier --write \"{src,functions,config}/**!(*node_modules)/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "check": "prettier --check \"{src,functions,config}/**!(*node_modules)/*.{js,jsx,ts,tsx,json,css,scss,md}\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,functions,config}/**!(*node_modules)/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "devDependencies": {
    "husky": "8.0.2",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "react-scripts": "4.0.3",
    "sass": "1.56.1"
  },
  "proxy": "http://localhost:4000"
}
