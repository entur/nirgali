{
  "name": "nirgali",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@entur/auth-provider": "1.1.0",
    "@entur/button": "2.10.13",
    "@entur/datepicker": "3.0.10",
    "@entur/form": "5.4.17",
    "@entur/icons": "5.7.0",
    "@entur/layout": "2.1.20",
    "@entur/tab": "0.4.41",
    "@entur/tokens": "3.7.0",
    "@entur/tooltip": "2.6.4",
    "@entur/typography": "1.7.9",
    "apollo-fetch": "0.7.0",
    "bootstrap": "4.6.2",
    "date-fns": "2.29.3",
    "firebase": "9.17.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.8.1",
    "react-select": "3.2.0",
    "react-super-responsive-table": "5.2.1",
    "react-windowed-select": "2.0.5"
  },
  "scripts": {
    "copy:config": "cp config/config-dev.json public/config.json",
    "prestart": "run-p --race copy:config",
    "start": "run-p --race start:firebase start:react",
    "start:firebase": "firebase serve -p 4000",
    "start:react": "PORT=3001 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "test:functions": "jest functions",
    "format": "prettier --write \"{src,functions,config}/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "check": "prettier --check \"{src,functions,config}/**/*.{js,jsx,ts,tsx,json,css,scss,md}\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,functions,config}/**!(*node_modules)/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "devDependencies": {
    "@types/jest": "29.4.0",
    "@types/node": "18.11.9",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.10",
    "husky": "8.0.3",
    "lint-staged": "13.1.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.4",
    "react-scripts": "5.0.1",
    "sass": "1.58.1",
    "typescript": "4.9.5"
  },
  "proxy": "http://localhost:4000"
}
