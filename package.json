{
  "name": "nirgali",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@entur/auth-provider": "1.1.1",
    "@entur/button": "2.10.15",
    "@entur/datepicker": "3.0.10",
    "@entur/form": "5.4.20",
    "@entur/icons": "5.8.1",
    "@entur/layout": "2.1.32",
    "@entur/tab": "0.4.48",
    "@entur/tokens": "3.9.0",
    "@entur/tooltip": "2.6.18",
    "@entur/typography": "1.7.17",
    "apollo-fetch": "0.7.0",
    "bootstrap": "4.6.2",
    "date-fns": "2.30.0",
    "firebase": "9.21.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.10.0",
    "react-select": "3.2.0",
    "react-super-responsive-table": "5.2.1",
    "react-windowed-select": "2.0.5"
  },
  "scripts": {
    "copy:config": "cp config/config-dev.json public/config.json",
    "prestart": "run-p --race copy:config",
    "start": "run-p --race start:firebase start:react",
    "start:firebase": "firebase serve -p 4000",
    "start:react": "PORT=3001 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "test:functions": "jest functions",
    "format": "prettier --write \"{src,functions,config}/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "check": "prettier --check \"{src,functions,config}/**/*.{js,jsx,ts,tsx,json,css,scss,md}\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,functions,config}/**!(*node_modules)/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "devDependencies": {
    "@types/jest": "29.5.1",
    "@types/node": "18.11.9",
    "@types/react": "18.0.38",
    "@types/react-dom": "18.0.11",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.8",
    "react-scripts": "5.0.1",
    "sass": "1.62.1",
    "typescript": "4.9.5"
  },
  "proxy": "http://localhost:4000"
}
